<% include ./partials/header %>
<h1>Index Page</h1>

<% blocks.forEach(function(block) { %>
    <div class="block">
        <h3><%= block.title %></h3>
        <% block.todos.forEach(function(todo) { %>
            <li><%= todo.body %></li>
        <% }); %>
        <form action="/todo/<%= block._id %>?_method=DELETE" method="POST">
            <button class="">DELETE!!!!!!</button>
        </form>
    </div>
<% }); %>
<form action="/todo/new" method="GET">
    <button>Add Block</button>
</form>
